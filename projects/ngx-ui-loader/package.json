{
  "name": "ngx-ui-loader",
  "description": "An all-in-one and fully customizable loader/spinner for Angular 5, 6, 7 and 8+ applications. It supports foreground, background spinner/loader, indicative progress bar and multiple loaders.",
  "version": "8.0.0",
  "scripts": {
    "build": "../../node_modules/.bin/tsc -p tsconfig.schematics.json",
    "copy:collections": "cp schematics/*collection.json ../../dist/ngx-ui-loader/schematics/",
    "postbuild": "npm run copy:collections"
  },
  "schematics": "./schematics/collection.json",
  "ng-update": {
    "migrations": "./schematics/migration-collection.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/t-ho/ngx-ui-loader.git"
  },
  "author": "t-ho <toan.hmt@gmail.com>",
  "homepage": "https://ngx-ui-loader.stackblitz.io",
  "license": "MIT",
  "private": false,
  "peerDependencies": {
    "@angular/common": ">=8.0.0",
    "@angular/core": ">=8.0.0",
    "@angular/platform-browser": ">=8.0.0",
    "@angular/router": ">=8.0.0",
    "rxjs": ">=6.0.0"
  },
  "keywords": [
    "ngx-ui-loader",
    "ngx-loader",
    "ngx-loading",
    "ngx-multiple-loader",
    "ngx-multiloader",
    "loader",
    "loading",
    "spinner",
    "ngx-spinner",
    "progressbar",
    "progress bar",
    "loader AoT compatible",
    "Angular loader",
    "Angular loading",
    "Angular multiple loaders",
    "Angular spinner",
    "Angular progress bar"
  ]
}